<?xml version="1.0" encoding="utf-8"?>
<!--
    REDESIGNED LAYOUT — activity_main.xml
    Theme: Premium Dark / Glassmorphic Translation UI

    Required in res/values/colors.xml:
        <color name="bg_deep">#0D0F14</color>
        <color name="bg_card">#161B26</color>
        <color name="bg_card_elevated">#1E2535</color>
        <color name="accent_primary">#4F8EF7</color>
        <color name="accent_secondary">#7B5EA7</color>
        <color name="accent_record">#F75F5F</color>
        <color name="accent_record_dark">#C43E3E</color>
        <color name="text_primary">#EAECF0</color>
        <color name="text_secondary">#8A94A6</color>
        <color name="text_label">#4F8EF7</color>
        <color name="divider">#252D3D</color>
        <color name="success_green">#3DD68C</color>

    Required in res/values/styles.xml:
        Extend your activity theme from Theme.Material3.DayNight.NoActionBar
        and set android:windowBackground to @color/bg_deep.

    Required in res/values/dimens.xml:
        <dimen name="card_radius">20dp</dimen>
        <dimen name="card_elevation">0dp</dimen>

    Requires Material Components library:
        implementation 'com.google.android.material:material:1.11.0'
-->

<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0D0F14"
    android:keepScreenOn="true"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="48dp"
        android:paddingBottom="32dp">

        <!-- ══════════════════════════════════ -->
        <!--  HEADER                            -->
        <!-- ══════════════════════════════════ -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="32dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ARM Challenge"
                android:textSize="11sp"
                android:letterSpacing="0.25"
                android:textColor="#4F8EF7"
                android:fontFamily="sans-serif-medium"
                android:layout_marginBottom="6dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Live Translator"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:textColor="#EAECF0"
                    android:fontFamily="sans-serif-medium" />

                <!-- Status pill -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="#1E2535"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="0dp"
                    app:strokeWidth="0dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp"
                        android:paddingTop="6dp"
                        android:paddingBottom="6dp">

                        <View
                            android:id="@+id/statusDot"
                            android:layout_width="8dp"
                            android:layout_height="8dp"
                            android:background="@drawable/circle_status"
                            android:layout_marginEnd="6dp" />

                        <TextView
                            android:id="@+id/tvStatus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Initializing…"
                            android:textSize="12sp"
                            android:textColor="#8A94A6"
                            android:fontFamily="sans-serif" />

                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>
        </LinearLayout>

        <!-- ══════════════════════════════════ -->
        <!--  LANGUAGE SELECTOR CARD           -->
        <!-- ══════════════════════════════════ -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="#161B26"
            app:cardCornerRadius="20dp"
            app:cardElevation="0dp"
            app:strokeColor="#252D3D"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="16dp">

                <!-- Source Language -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="FROM"
                        android:textSize="10sp"
                        android:letterSpacing="0.15"
                        android:textColor="#4F8EF7"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginBottom="4dp" />

                    <Spinner
                        android:id="@+id/spinnerSourceLanguage"
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:background="@drawable/spinner_bg_dark"
                        android:paddingStart="12dp"
                        android:paddingEnd="4dp"
                        android:textColor="#EAECF0" />
                </LinearLayout>

                <!-- Swap Icon -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnSwapLanguages"
                    style="@style/Widget.Material3.Button.IconButton"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    app:icon="@drawable/ic_swap_horiz"
                    app:iconSize="20dp"
                    app:iconTint="#8A94A6"
                    app:iconGravity="textStart"
                    app:iconPadding="0dp"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    app:backgroundTint="#1E2535"
                    app:cornerRadius="12dp" />

                <!-- Target Language -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TO"
                        android:textSize="10sp"
                        android:letterSpacing="0.15"
                        android:textColor="#7B5EA7"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginBottom="4dp" />

                    <Spinner
                        android:id="@+id/spinnerTargetLanguage"
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:background="@drawable/spinner_bg_dark"
                        android:paddingStart="12dp"
                        android:paddingEnd="4dp"
                        android:textColor="#EAECF0" />
                </LinearLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- ══════════════════════════════════ -->
        <!--  RECORD BUTTON                    -->
        <!-- ══════════════════════════════════ -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnRecord"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_marginBottom="24dp"
            android:text="Tap to Record"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:letterSpacing="0.05"
            android:fontFamily="sans-serif-medium"
            app:icon="@drawable/ic_mic"
            app:iconSize="22dp"
            app:iconTint="#FFFFFF"
            app:iconGravity="textStart"
            app:iconPadding="12dp"
            app:backgroundTint="#F75F5F"
            app:cornerRadius="18dp"
            app:rippleColor="#40FFFFFF"
            app:elevation="0dp" />

        <!-- ══════════════════════════════════ -->
        <!--  TRANSCRIPTION CARD               -->
        <!-- ══════════════════════════════════ -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="#161B26"
            app:cardCornerRadius="20dp"
            app:cardElevation="0dp"
            app:strokeColor="#252D3D"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Card Header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="14dp">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_waveform"
                        app:tint="#4F8EF7"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Transcription"
                        android:textSize="12sp"
                        android:letterSpacing="0.1"
                        android:textColor="#4F8EF7"
                        android:fontFamily="sans-serif-medium" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Whisper"
                        android:textSize="11sp"
                        android:textColor="#252D3D"
                        android:background="@drawable/tag_bg_blue"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp"
                        android:paddingTop="3dp"
                        android:paddingBottom="3dp" />
                </LinearLayout>

                <!-- Divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#252D3D"
                    android:layout_marginBottom="14dp" />

                <!-- Transcription Text -->
                <TextView
                    android:id="@+id/tvTranscription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="72dp"
                    android:hint="Your speech will appear here…"
                    android:textColorHint="#3D4A62"
                    android:textSize="16sp"
                    android:lineSpacingMultiplier="1.5"
                    android:textColor="#EAECF0"
                    android:fontFamily="sans-serif" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- ══════════════════════════════════ -->
        <!--  TRANSLATION CARD                 -->
        <!-- ══════════════════════════════════ -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#161B26"
            app:cardCornerRadius="20dp"
            app:cardElevation="0dp"
            app:strokeColor="#2A2040"
            app:strokeWidth="1dp">

            <!-- Subtle gradient top accent bar -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:background="@drawable/gradient_accent_bar" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- Card Header -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="14dp">

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_translate"
                            app:tint="#7B5EA7"
                            android:layout_marginEnd="8dp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Translation"
                            android:textSize="12sp"
                            android:letterSpacing="0.1"
                            android:textColor="#7B5EA7"
                            android:fontFamily="sans-serif-medium" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ggema"
                            android:textSize="11sp"
                            android:textColor="#7B5EA7"
                            android:background="@drawable/tag_bg_purple"
                            android:paddingStart="8dp"
                            android:paddingEnd="8dp"
                            android:paddingTop="3dp"
                            android:paddingBottom="3dp" />
                    </LinearLayout>

                    <!-- Divider -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#252D3D"
                        android:layout_marginBottom="14dp" />

                    <!-- Translation Text -->
                    <TextView
                        android:id="@+id/tvTranslation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="100dp"
                        android:hint="Translation will appear here…"
                        android:textColorHint="#3D4A62"
                        android:textSize="20sp"
                        android:lineSpacingMultiplier="1.6"
                        android:textColor="#EAECF0"
                        android:fontFamily="sans-serif-light" />

                    <!-- Copy Button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnCopyTranslation"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:layout_gravity="end"
                        android:layout_marginTop="16dp"
                        android:text="Copy"
                        android:textSize="12sp"
                        android:textColor="#7B5EA7"
                        app:icon="@drawable/ic_copy"
                        app:iconSize="14dp"
                        app:iconTint="#7B5EA7"
                        app:iconPadding="6dp"
                        app:strokeColor="#2A2040"
                        app:cornerRadius="10dp"
                        app:rippleColor="#207B5EA7" />

                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>